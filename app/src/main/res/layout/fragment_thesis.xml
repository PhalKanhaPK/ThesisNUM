<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ThesisFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="false">

            <!--            textView-->

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="11pt"
                    android:textColor="@color/white"
                    android:text="What Would You Like To Find?"
                    />

            <!--            txtSearch-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <EditText
                    android:id="@+id/search_thesis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Find any thesis..."
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:background="@drawable/search_background"/>
            </LinearLayout>

            <!--            Thesis List-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="ជំនាន់ទី២៩"
                    android:textSize="8pt"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/genTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="ជំនាញ IT"
                    android:textSize="8pt"
                    android:textColor="@color/white"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>
            <ListView
                android:id="@+id/list_thesis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"/>
        </LinearLayout>

</FrameLayout>